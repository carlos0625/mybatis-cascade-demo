<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.learn.mybatis.mapper.WorkCardMapper">
    <select id="findWorkCardByEmpId" parameterType="Long" resultType="com.learn.mybatis.pojo.WorkCard">
        select id, emp_id, real_name, department, mobile, position, note
        from t_work_card
        where emp_id = #{empId}
    </select>
</mapper>